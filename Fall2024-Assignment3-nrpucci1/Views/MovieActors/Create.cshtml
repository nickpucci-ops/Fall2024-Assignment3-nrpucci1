@model Fall2024_Assignment3_nrpucci1.Models.MovieActorViewModel

@{
    ViewData["Title"] = "Create Association";
}

<h1>Create Association</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="MovieActor.MovieId">Movie</label>
        <select asp-for="MovieActor.MovieId" class="form-control">
            <option value="0">Select Movie</option>
            @foreach (var movie in Model.Movies)
            {
                <option value="@movie.Id">@movie.Title</option>
            }
        </select>
        <span asp-validation-for="MovieActor.MovieId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MovieActor.ActorId">Actor</label>
        <select asp-for="MovieActor.ActorId" class="form-control">
            <option value="0">Select Actor</option>
            @foreach (var actor in Model.Actors)
            {
                <option value="@actor.Id">@actor.Name</option>
            }
        </select>
        <span asp-validation-for="MovieActor.ActorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
