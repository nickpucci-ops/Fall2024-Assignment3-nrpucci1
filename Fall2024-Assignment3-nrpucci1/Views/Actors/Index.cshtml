@model IEnumerable<Fall2024_Assignment3_nrpucci1.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table datatables">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.ImdbLink)</th>
            <th>@Html.DisplayNameFor(model => model.PhotoURL)</th>
            <th>Movies</th> <!-- New Column -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <!-- Existing columns -->
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td>
                    <a href="@item.ImdbLink" target="_blank">@Html.DisplayFor(modelItem => item.ImdbLink)</a>
                </td>
                <td>
                    <img src="@item.PhotoURL" alt="Actor Photo" style="width:50px;" />
                </td>
                <!-- New Movies Column -->
                <td>
                    @foreach (var movieActor in actor.MovieActors)
                    {
                        <span>@movieActor.Movie.Title</span>
                    }
                </td>
                <!-- Action Links -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

