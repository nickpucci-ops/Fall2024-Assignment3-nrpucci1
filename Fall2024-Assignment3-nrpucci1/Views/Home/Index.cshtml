@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">Movie and Actor Management Site</h1>
<p class="text-center">
    Welcome! This website allows you to manage movies and actors with AI-driven reviews and sentiments.
</p>

<div class="text-center mt-4">
    <h2 class="display-5">Get Started</h2>
    <p>Manage your movies, actors, and associations below:</p>

    <div class="d-flex justify-content-center gap-3">
        <a asp-controller="Movies" asp-action="Create" class="btn btn-primary btn-lg">Add New Movie</a>
        <a asp-controller="Actors" asp-action="Create" class="btn btn-primary btn-lg">Add New Actor</a>
        <a asp-controller="MovieActor" asp-action="Create" class="btn btn-primary btn-lg">Manage Associations</a>
    </div>
</div>
